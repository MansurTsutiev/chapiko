<div class="bg-white">
  <%= turbo_frame_tag "new_block_form", src: "blocks/new" do %>
    <h1>Loading</h1>
  <% end %>

  <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8 lg:py-24">
    <div class="space-y-12">
      <div class="space-y-5 sm:space-y-4 md:max-w-xl lg:max-w-3xl xl:max-w-none">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Your Selections</h2>
        <p class="text-xl text-gray-500">Share your selections with your others</p>
      </div>
      <ul role="list" id="list_of_blocks" class="space-y-12 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:gap-y-12 sm:space-y-0 lg:grid-cols-3 lg:gap-x-8">
          <% @blocks.each do |block| %>
            <li>
              <div class="space-y-4">
                <div class="aspect-w-3 aspect-h-2">

                  <img class="rounded-lg object-cover shadow-lg" src="<%= block.link %>" >
                </div>
              </div>
            </li>
        <% end %>
        </ul>
    </div>
  </div>
</div>

